<html metal:use-macro="base.macros['base']">
  <tal:block metal:fill-slot="title">Composers</tal:block>
  <tal:block metal:fill-slot="content">
      
  <h2>Composers</h2>

  <div tal:repeat="(c, count) composers">
    <div>
      <!-- TODO: pill? -->
      <span style="text-align: right; width: 5em; color: #999; display: inline-block;">
        ${count}
      </span>
      <a href="${request.route_url('composer', composer=c)}">${c}</a>
    </div>
  </div>

  </tal:block>
</html>