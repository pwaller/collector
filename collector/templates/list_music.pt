<html metal:use-macro="base.macros['base']">
  <tal:block metal:fill-slot="title">${structure: title}</tal:block>
  <tal:block metal:fill-slot="content">
      
  <h2>${structure: title}</h2>

  <table class="table">
    <thead>
      <tr><th>Music title</th><th>Cover</th></tr>
    </thead>
    <tbody>
    <tr tal:repeat="(m, crspan, evenclass) music" class="${evenclass}">
      <td>${m.title}</td>
      <td tal:condition="crspan != 0" rowspan="${crspan}">
        <small><a href="${request.route_url('cover', cover_id=m.cover.id)}">${m.cover.title}</a></small>
      </td>
    </tr>
    </tbody>
  </table>

  </tal:block>
</html>